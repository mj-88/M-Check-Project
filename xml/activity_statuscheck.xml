<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".statuscheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="#00BCD4">

        <TextView
            android:id="@+id/textview_stdinfo"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="60171776 주혜일"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textview_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time"
            android:background="@drawable/rectangle"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/lecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="lecture"
            android:textSize="50sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:id="@+id/listView_main_list2"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="#00BCD4"
        android:orientation="horizontal">


        <TextView
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="주차"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="출석 시간(~15분 이내)"
            android:textColor="#ffffff"
            android:textSize="18sp" />



    </LinearLayout>


    <ListView
        android:id="@+id/listView_statuscheck_list"
        android:layout_width="match_parent"
        android:layout_height="361dp"
        android:layout_weight="0.4"
        android:text="list" />

    <TextView
        android:id="@+id/textView_main_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4" />
    <TextView
    android:id="@+id/textView_main_result2"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.4" />
    <TextView
        android:id="@+id/textView_main_result3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"/>
</LinearLayout>
